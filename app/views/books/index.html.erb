<%= render 'users/userinfo',user: @user %>
<%= render 'new',book: @book %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Option</th>
          <th colspan="3"></th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %>
            <%= link_to book.user.name, user_path(book.user) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
