<%= yield %>

<%= render 'users/userinfo',user: @user %>
<%= render 'new',book: @book %>

<h2>Book detail</h2>
<table class="table">
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
    </tr>
  <% end %>
 </tbody>
</table>
</div>
