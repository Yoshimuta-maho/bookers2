<div class="row">
  <div class="col-md-3">
    <div>
      <%= flash[:notice] %>
    </div>
    <h1>User info</h1>
    <%= image_tag user.get_profile_image(100,100) %>
    <table>
      <tbody>
        <tr></tr>
        <tr>
          <th>name<th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="btn btn-outline-secondary btn-block">
      <%= link_to edit_user_path(user.id) do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
  </div>
</div>