<div>
  <%= flash[:notice] %>
</div>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
<div class="form-group">
  <label for="name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%>
  </div>
  <div class="form-group">
    <label for="profile_image">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
  </div>
  <label for="introduction">introduction</label>
    <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:""%>
  </div>
  <%= f.submit "Update User" %>
<% end %>
