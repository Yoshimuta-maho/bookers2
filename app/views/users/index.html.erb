<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @users.each do |f| %>
            <tr>
              <td><%= image_tag f.get_profile_image(100, 100) %></td>
              <td><%= f.name %></td>
              <td><%= f.introduction %></td>
              <td><%= link_to "Show" ,user_path(f) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
