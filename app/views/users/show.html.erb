<%= render 'userinfo', user: @user %>
<%= render 'books/new', book: @book %>

<h2>Books</h2>
<table>
 <thead>
   <th></th>
   <th>Title</th>
   <th>Option</th>
   <th colspan="3"></th>
 </thead>
 <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
 </tbody>
</table>